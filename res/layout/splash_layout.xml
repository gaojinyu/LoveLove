<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/splash_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/guide_buttom_high"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/splash_index_zero"
            android:layout_width="8.0dip"
            android:layout_height="8.0dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="8.0dip"
            android:clickable="true"
            android:src="@drawable/splash_dark_dot" />

        <ImageView
             android:id="@+id/splash_index_one"
            android:layout_width="8.0dip"
            android:layout_height="8.0dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="8.0dip"
            android:clickable="true"
            android:src="@drawable/splash_dark_dot"
             />

        <ImageView
             android:id="@+id/splash_index_two"
            android:layout_width="8.0dip"
            android:layout_height="8.0dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="8.0dip"
            android:clickable="true"
            android:src="@drawable/splash_dark_dot" />

        <ImageView
             android:id="@+id/splash_index_three"
            android:layout_width="8.0dip"
            android:layout_height="8.0dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="8.0dip"
            android:clickable="true"
            android:src="@drawable/splash_dark_dot" />

        <ImageView
             android:id="@+id/splash_index_four"
            android:layout_width="8.0dip"
            android:layout_height="8.0dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="8.0dip"
            android:clickable="true"
            android:src="@drawable/splash_dark_dot" />
    </LinearLayout>

</RelativeLayout>