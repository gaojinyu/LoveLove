<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_value1"
        android:layout_marginRight="@dimen/margin_value1"
        android:layout_marginTop="@dimen/prompt_layout_top_height"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/vptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:text="@string/logon_msg_verify"
            android:textColor="@color/description_text_color"
            android:textSize="@dimen/textSize_prot" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/every_layout_height"
        android:layout_marginLeft="@dimen/margin_value1"
        android:layout_marginRight="@dimen/margin_value1"
        android:layout_marginTop="7.0dip"
        android:gravity="center"
        android:orientation="horizontal" 
        android:layout_gravity="center">

        <EditText
            android:id="@+id/phoneVerify_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/every_layout_height"
            android:background="@drawable/common_btn_bg"
            android:ems="4"
            android:focusable="true"
            android:layout_gravity="center_vertical"
            android:gravity="left|center"
            android:hint="@string/reg_hint_verify"
            android:maxLength="4"
            android:paddingLeft="10.0dip"
            android:phoneNumber="true"
            android:textColor="@color/black"
            android:textColorHint="@color/register_hint_color"
            android:textSize="@dimen/textSize_input" />
	<requestFocus />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout89"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/every_layout_height"
        android:layout_marginLeft="@dimen/margin_value1"
        android:layout_marginRight="@dimen/margin_value1"
        android:layout_marginTop="7.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/every_layout_height"
            android:gravity="center"
              android:background="@drawable/common_btn_bg"
            android:text="Button" />
    </LinearLayout>

</LinearLayout>